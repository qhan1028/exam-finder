{
  "name": "exam-finder",
  "version": "0.0.1",
  "description": "exam finder for 教師甄試考古題",
  "main": "index.js",
  "repository": "git@github.com:qhan1028/exam-finder.git",
  "author": "qhan1028 <michael.841028@gmail.com>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "lerna": "^3.22.1"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "servers/*"
  ],
  "eslintConfig": {
    "rules": {
      "sort-imports": "error"
    },
    "extends": [
      "prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "printWidth": 120
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --max-warnings=0"
    ],
    "*.{js,ts,tsx,css,scss,json,yml,yaml,html,md}": [
      "prettier --check"
    ]
  }
}
